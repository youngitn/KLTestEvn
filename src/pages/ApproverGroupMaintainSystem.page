            </script>
            <script crossorigin="anonymous" src="{!URLFOR($Resource.JSbundle, '/libs/vue.js')}">
            </script>
            <script>
                const  j$ = jQuery.noConflict();
            	j$(function() {
            		j$('a[id $= lkwgt]').removeClass('slds-input');

            		j$('input[id $= Applicant]').attr('required','true');
